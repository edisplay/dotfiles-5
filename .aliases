# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# List dir contents aliases (http://ss64.com/osx/ls.html)
alias ls="ls -G"
alias la="ls -oa"

# web dev stuff
alias s="python -m SimpleHTTPServer"
alias chrm="open /Applications/Google\ Chrome.app 'http://localhost:8000/'"
alias be="bundle exec"
alias redison="redis-server /usr/local/etc/redis.conf"
alias redisoff="redis-cli -h 127.0.0.1 -p 6379 shutdown"

# database shortcuts
alias msqlon="mysql.server start"
alias msqloff="mysql.server stop"
alias psqlon="pg_ctl -D /usr/local/var/postgres -l logfile start"
alias psqloff="pg_ctl -D /usr/local/var/postgres stop -s -m fast"
alias psqlprocess="ps auxwww | grep postgres"

# be nice
alias please=sudo

# Git Shortcuts for the super lazy
alias g="git"
alias st="git st"
alias cm="git cm"
alias lp="git lp"

# File size
alias fs="stat -f \"%z bytes\""
